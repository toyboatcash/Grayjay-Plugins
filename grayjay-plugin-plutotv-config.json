{
    "name": "Pluto TV",
    "description": "Watch Pluto TV content including live and on-demand videos",
    "version": "1.0.0",
    "author": "toyboatcashe",
    "authorUrl": "https://github.com/toyboatcash",
    "platformUrl": "https://pluto.tv",
    "script": "./grayjay-plugin-plutotv-script.js",
    "icon": "https://www.google.com/s2/favicons?domain=pluto.tv&sz=64",
    "id": "plutotv-unofficial-01",
    "allowEval": false,
    "allowAllHttpHeaderAccess": true,
    "permissions": {
        "http": {
            "domains": [
                "pluto.tv",
                "*.pluto.tv",
                "*.plutotv.net",
                "silo-hybrik.pluto.tv.s3.amazonaws.com"
            ]
        }
    },
    "capabilities": {
        "search": true,
        "categories": true,
        "channels": true,
        "featured": true
    },
    "supportedClaimTypes": [2],
    "enableLiveContent": true,
    "settings": [
        {
            "id": "videoQuality",
            "name": "Default Video Quality",
            "type": "select",
            "defaultValue": "auto",
            "options": [
                {"value": "auto", "name": "Auto (Recommended)"},
                {"value": "1080", "name": "1080p"},
                {"value": "720", "name": "720p"},
                {"value": "480", "name": "480p"}
            ]
        }
    ],
    "changelog": {
        "1.0.0": "Initial release with basic functionality"
    },
    "updateUrl": "https://raw.githubusercontent.com/toyboatcash/Grayjay-Plugins/main/updates.json"
}
